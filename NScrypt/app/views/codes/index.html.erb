<%- model_class = Code -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Drafts' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:contract_id) %></th>
      <th><%= model_class.human_attribute_name(:version) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <th><%=t '.nav', :default => t("helpers.navigation") %></th>
    </tr>
  </thead>
  <tbody>
    <% @codes.each do |code| %>
      <tr>
        <td><%= link_to code.id, code_path(code) %></td>
        <td><%= code.contract.title %></td>
        <td><%= code.version %></td>
        <td><%= code.author %></td>
        <td><%= code.state %></td>
        <td>
          <% if code.author == session[:user_id] %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_code_path(code), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        code_path(code),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
        <td>
          <%= link_to t("Parties"), controller: "parties", code_id: code.id %>
          <%= link_to t("Events"), controller: "sc_events", code_id: code.id if code.state == 'Signed' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_code_path,
            :class => 'btn btn-primary' %>
