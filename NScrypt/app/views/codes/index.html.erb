<%- model_class = Code -%>

<div class="new-draft">
  <%= link_to 'New Draft', new_code_path, :class => 'btn btn-primary' %>
</div>

<div class="page-header">
  <h1>Drafts</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Contract</th>
      <th>Version</th>
      <th>Status</th>
      <th>Interpreter</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @codes.each do |code| %>
      <tr>
        <td><%= code.contract.title %></td>
        <td><%= code.version %></td>
        <td><%= code.state.blank? ? '' : code.state.humanize %></td>
        <td><%= code.interpreter.blank? ? 'None' : code.interpreter.humanize %></td>
        <td>
          <%= link_to "Examine", code_path(code.id), :class => 'btn btn-default' %>
          <%= link_to "Archive", {controller: "codes", action: "archive", code_id: code.id}, :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
