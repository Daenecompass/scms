<%- model_class = Code -%>

<style>
textarea
{
  font-family: monospace;
}
</style>

<div class="page-header">
  <h1><%= @code.sign_state == 'Signed' ? 'Contract' : 'Draft' %></h1>
</div>

<dl>
  <dt>Contract</dt>
  <dd><%= @code.contract.title %></dd>
  <dt>Version</dt>
  <dd><%= @code.version %></dd>
  <dt>Status</dt>
  <dd><%= @code.state %></dd>
</dl>

<textarea readonly rows="50" cols="80"><%= @code.code %></textarea>

<% if @code.proposed || @code.sign_state != 'Unsigned' %>
  <p>NOTE: As this draft has been submitted or signed, hence it cannot be edited. Create a duplicate to make alterations, which you can later submit as a separate proposal.</p>
<% end %>

<p>
  <% if !@code.proposed && @code.sign_state == 'Unsigned' %>
    <%= link_to "Edit Code", edit_code_path(@code), :class => 'btn btn-default' %>
  <% else %>
    <%= link_to "Duplicate", {action: "duplicate", code_id: @code.id}, :class => 'btn btn-default' %>
  <% end %>

  <% if (!@code.proposed && !@code.posted) && @code.assign_state == 'Assigned' %>
    <%= link_to "Propose", {action: "propose", code_id: @code.id}, :class => 'btn btn-default' %>
  <% elsif @code.proposed && (@code.sign_state == 'Pre-signed' || @code.sign_state == 'Unsigned') && @code.author == current_user.id %>
    <%= link_to("Retract", {action: "retract", code_id: @code.id}, :class => 'btn btn-default') unless @code.state == 'Rejected' %>
  <% end %>

  <% if !@code.posted && @code.sign_state == 'Pre-signed' && @code.assign_state == 'Self-assigned' %>
    <%= link_to "Post", {action: "post", code_id: @code.id}, :class => 'btn btn-default' %>
  <% elsif @code.posted && @code.author == current_user.id && @code.state != 'Signed' %>
    <%= link_to "Unpost", {action: "unpost", code_id: @code.id}, :class => 'btn btn-default' %>
  <% elsif @code.posted && @code.author != current_user.id && @code.state != 'Signed' %>
    <%= link_to "Accept", {action: "accept", code_id: @code.id}, :class => 'btn btn-default' %>
  <% end %>

  <% if @code.proposed && @code.author != current_user.id && !@code.rejected %>
    <%= link_to "Reject", {action: "reject", code_id: @code.id}, :class => 'btn btn-default' %>
  <% end %>

  <% if !@code.code.blank? && @code.assign_state == 'Assigned' && !@code.interpreter.blank? %>
    <%= link_to "Debug", {action: "debug", code_id: @code.id}, :class => 'btn btn-default' %>
  <% end %>
</p>

<h2>Signatures</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Role</th>
      <th>Party Name</th>
      <th>Signed</th>
      <th>Signature Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @code.parties.each do |party| %>
      <tr>
        <td><%= party.role %></td>
        <td>
          <% if @code.posted && party.user.nil? %>
            <%= 'Available' %>
          <% elsif party.user.nil? %>
            <%= form_for party, url: {controller: "parties", action: "assign", party_id: party.id} do |f| %>
              <%= f.select(:user, options_from_collection_for_select(User.all, :id, :name)) %>
              <%= f.submit "Assign", :class => 'btn btn-default' %>
            <% end %>
          <% elsif !@code.proposed && party.state != 'Signed' %>
            <%= form_for party, url: {controller: "parties", action: "unassign", party_id: party.id} do |f| %>
              <%= party.user.username %>
              <%= f.submit "Unassign", :class => 'btn btn-default' %>
            <% end %>
          <% else %>
            <%= party.user.username %>
          <% end %>
        </td>
        <td><%= party.state == 'Signed' ? 'Yes' : 'No' %></td>
        <td><%= party.state == 'Signed' ?  party.updated_at : 'N/A' %></td>
        <td>
          <% if !party.user.nil? %>
            <% if party.user == current_user %>
              <% if party.state != 'Signed' && @code.state != 'Rejected' %>
                <%= link_to "Sign", {controller: "parties", action: "sign", party_id: party.id}, :class => 'btn btn-default' %>
              <% end %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
