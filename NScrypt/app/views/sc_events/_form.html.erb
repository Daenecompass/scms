<%= form_for @sc_event, :html => { :class => "form-horizontal sc_event" } do |f| %>

    <% if @sc_event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sc_event.errors.count, "error") %> prohibited this sc_event from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sc_event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :callback, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :callback, :class => 'form-control' %>
    </div>
    <%= error_span(@sc_event[:callback]) %>
  </div>
  <div class="control-group">
    <%= f.label :code_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :code_id, :class => 'form-control' %>
    </div>
    <%= error_span(@sc_event[:code_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            sc_events_path, :class => 'btn btn-default' %>

<% end %>
