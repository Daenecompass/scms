<%- model_class = Contract -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Signed Contracts' %></h1>
</div>
<table class="table table-striped">
  <% if @contracts.length == 0 %>
    You don't have any signed contracts. Start by writing drafts!
  <% else %>
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:owner) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <th><%=t '.navigation', :default => t("helpers.navigation") %></th>
    </tr>
  </thead>
  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= link_to contract.id, contract_path(contract) %></td>
        <td><%= contract.title %></td>
        <td><%= contract.description %></td>
        <td><%= contract.owner %></td>
        <td><%= contract.status %></td>
        <td>
          <% if contract.owner == current_user && contract.status == 'Terminated' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        contract_path(contract),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
        <td>
          <% if !contract.signed_code_id.nil? %>
            <% if !contract.sc_event_id.nil? %>
              <%= link_to t("Portal"), controller: "sc_events", action: "trigger", sc_event_id: contract.sc_event_id %>
            <% else %>
              <%= link_to t("Examine"), code_path(contract.signed_code_id) %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <% end %>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_contract_path,
            :class => 'btn btn-primary' %>
