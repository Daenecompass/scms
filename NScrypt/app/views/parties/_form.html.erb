<%= form_for @party, :html => { :class => "form-horizontal party" } do |f| %>

    <% if @party.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@party.errors.count, "error") %> prohibited this party from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @party.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

        <div class="control-group">
            <%= f.label :user_id, :class => 'control-label' %>
            <div class="controls">
                <%= f.select(:user_id, options_from_collection_for_select(User.all, :id, :name)) %>
            </div>
            <%= error_span(@party[:user_id]) %>
        </div>
    <div class="control-group">
        <%= f.label :role_id, :class => 'control-label' %>
        <div class="controls">
            <%= f.select(:role_id, options_from_collection_for_select(Role.all, :id, :name)) %>
        </div>
        <%= error_span(@party[:role_id]) %>
    </div>
    <div class="control-group">
        <%= f.label :code_id, :class => 'control-label' %>
        <div class="controls">
            <%= f.select(:code_id, options_from_collection_for_select(Code.all, :id, :version)) %>
        </div>
        <%= error_span(@party[:code_id]) %>
    </div>

    <div class="control-group">
        <%= f.label :state, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :state, :class => 'form-control' %>
        </div>
        <%= error_span(@party[:state]) %>
    </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            parties_path, :class => 'btn btn-default' %>

<% end %>
